<!DOCTYPE html>
<html lang=pt-br>
<head>
    <title>Mega Saldão do Alberto</title>
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/cart.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/simpleCart.min.js")" type="text/javascript"></script>
    <script type='text/javascript'>
        $(document).ready(function () {
            simpleCart({ checkout: { type: "PayPal", email: "achvaicer@gmail.com" }, currency: "BRL" });
            simpleCart({
                cartColumns: [
                    { attr: "name", label: "Nome" },
                    { attr: "price", label: "Preço", view: 'currency' },
                    { attr: "quantity", label: "Quantidade" },
                    { view: "remove", text: "Remover", label: false }
                    ]
            });
            $(".btncart").click(function () {
                $(".well").toggle("slow");
            });

        });

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-32068108-1']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();


    </script>
</head>
<body>
    <a href="https://github.com/achvaicer/mega-saldao" style="z-index:1050" target="_blank">
        <img style="position: absolute; top: 0; right: 0; border: 0; z-index:1050;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png" alt="Fork me on GitHub" />
    </a>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="@Url.Action("Index", "Home")">Mega Saldão do Alberto</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><a href="@Url.Action("Index", "Home")">Home</a></li>
              <li><a href="@Url.Action("About", "Home")">Sobre</a></li>
              <li><a href="@Url.Action("Contact", "Home")">Contato</a></li>
            </ul>

            <div class="nav right">
                <div class="btn btncart">
                    <span class="simpleCart_quantity"></span> itens - <span class="simpleCart_total"></span>
                </div>
                <a class="btn btn-success simpleCart_checkout" href="javascript:;"><i class="icon-shopping-cart icon-white"></i> Finalizar Compra</a>
            </div>
            

          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container">
    <div class="well" style="display:none">
        <div class="simpleCart_items row" >
    
        </div>

    </div>
        @RenderBody()
    </div>
</body>
</html>
